<form action="/tasks" method="post" accept-charset="utf-8">
  <!-- SPECIAL INPUT TO ALLOW RAILS TO USE THIS FORM -->
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <h1>Submit a New Task</h1>

  <p>
    <label for="name"><strong>Task Name</strong></label>
    <input type="text" name="name" value="">
  </p>

  <p>
    <label for="description"><strong>Task Description</strong></label>
    <textarea name="description" rows="3"></textarea>
  </p>

  <p>
    <input type="submit" value="Submit">
  </p>

</form>
