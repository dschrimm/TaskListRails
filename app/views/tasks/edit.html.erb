<%= form_for @task, method: :patch do |f| %>
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>

  <p><%= f.label :description %>
  <%= f.text_area :description %></p>

  <p>
    <%= f.label :completed_at %>
    <%= f.date_field :completed_at %>
  </p>

  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>
